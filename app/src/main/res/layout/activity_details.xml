<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_white"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="9dp"
                android:orientation="vertical"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/dImg"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/dName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/iran_yekan"
                    android:gravity="right"
                    android:text="نام"
                    android:textColor="@color/title_black"
                    android:textSize="25dp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/dWriter"
                    android:layout_width="376dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/iran_yekan"
                    android:gravity="left"
                    android:text="نويسنده"
                    android:textColor="@color/title_black"
                    android:textSize="17dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/nazanin"
                android:text="نظرات"
                android:textColor="@color/dark_blue_gray"
                android:textSize="20dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_comment"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/blue_gray"
                app:rippleColor="@android:color/darker_gray" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/nazanin"
                android:text="مشخصات"
                android:textColor="@color/dark_blue_gray"
                android:textSize="17dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="0dp"
                app:icon="@drawable/ic_detail"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/blue_gray"
                app:rippleColor="@android:color/darker_gray" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آماده ارسال از تی بوک"
                    android:textSize="18dp"
                    android:fontFamily="@font/nazanin"
                    android:textColor="@color/gray"
                    />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="?android:attr/listDivider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/farsi_nums"
                        android:gravity="left"
                        android:text="قیمت"
                        android:textColor="@color/green"
                        android:textSize="25dp" />



                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addIn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/iran_yekan"
                    android:text="اضافه کردن به سبد خرید"
                    app:backgroundTint="#037E07"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_shopping_cart"
                    app:iconSize="22dp"
                    android:onClick="onClickAdd"
                    android:background="@color/green"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/iran_yekan"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    android:text="توضیحات"
                    android:textColor="#C9464646"
                    android:textSize="15dp"
                    android:justificationMode="inter_word"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="?android:attr/listDivider" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ثبت امتياز"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    app:backgroundTint="#A82222"
                    android:fontFamily="@font/nazanin"
                    android:onClick="onClickSubmit"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>